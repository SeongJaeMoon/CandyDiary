<resources>
     <!--gradle version upgrade.-->

     <style name="menu_labels_style">
          <item name="android:background">@drawable/fab_label_background</item>
          <item name="android:textColor">@color/white</item>
     </style>

     <style name="material_action_buttons">
          <item name="android:textColor">@drawable/select_material_btn</item>
          <item name="android:textSize">@dimen/normal_font_size</item>
     </style>

     <style name="material_dialog_content_text_important">
          <item name="android:textColor">@android:color/black</item>
          <item name="android:textSize">@dimen/normal_font_size</item>
     </style>

     <style name="material_dialog_content_text_description">
          <item name="android:textSize">@dimen/normal_font_size</item>
     </style>

     <style name="weather_properties_icon">
          <item name="android:layout_marginTop">@dimen/standard_margin</item>
          <item name="android:layout_centerHorizontal">true</item>
     </style>

     <style name="base_text_views">
          <item name="android:fontFamily">@font/ng</item>
     </style>

     <style name="detail_properties_textview" parent="base_text_views">
          <item name="android:layout_centerHorizontal">true</item>
          <item name="android:layout_marginTop">@dimen/standard_margin</item>
          <item name="android:textColor">@android:color/black</item>
     </style>

</resources>
