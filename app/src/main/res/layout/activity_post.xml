<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.PostActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorAccent"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/post_img_title"
            android:textAlignment="center"
            android:textSize="15sp"/>
        <LinearLayout
            android:id="@+id/imagPanel"
            android:layout_marginTop="5dp"
            android:layout_below="@id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/add_img1"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_weight="0.2"
                android:adjustViewBounds="true"
                android:background="@color/colorGrey"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_action_add" />
            <ImageView
                android:id="@+id/add_img2"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_weight="0.2"
                android:adjustViewBounds="true"
                android:background="@color/colorGrey"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_action_add" />
            <ImageView
                android:contentDescription="@string/app_name"
                android:id="@+id/add_img3"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:adjustViewBounds="true"
                android:background="@color/colorGrey"
                android:scaleType="centerCrop"
                android:layout_weight="0.2"
                app:srcCompat="@drawable/ic_action_add"/>
            <ImageView
                android:contentDescription="@string/app_name"
                android:id="@+id/add_img4"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:adjustViewBounds="true"
                android:background="@color/colorGrey"
                android:scaleType="centerCrop"
                android:layout_weight="0.2"
                app:srcCompat="@drawable/ic_action_add"/>
            <ImageView
                android:contentDescription="@string/app_name"
                android:id="@+id/add_img5"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:adjustViewBounds="true"
                android:background="@color/colorGrey"
                android:scaleType="centerCrop"
                android:layout_weight="0.2"
                app:srcCompat="@drawable/ic_action_add"/>
        </LinearLayout>
        <TextView
            android:textSize="15sp"
            android:id="@+id/btn_add"
            android:text="@string/post_add"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagPanel"/>
        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_add"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:background="@drawable/tv_style"
            android:hint="@string/post_title_hint"
            android:inputType="text"
            android:maxLines="1"
            android:padding="15dp"
            android:textColorHint="@color/cardview_shadow_start_color"
            android:textSize="15sp"
            android:maxLength="20"/>

        <EditText
            android:id="@+id/etDesc"
            android:layout_width="364dp"
            android:layout_height="180dp"
            android:layout_below="@+id/etTitle"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/tv_style"
            android:hint="@string/post_desc_hint"
            android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
            android:maxLength="1000"
            android:maxLines="5"
            android:padding="15dp"
            android:scrollbars="vertical"
            android:textColorHint="@color/cardview_shadow_start_color"
            android:textSize="15sp" />
        <!--android:imeOptions="actionSend|flagNoEnterAction"-->
        <!--<TextView-->
            <!--android:textAlignment="center"-->
            <!--android:layout_below="@+id/etDesc"-->
            <!--android:id="@+id/tv_prompt"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:paddingBottom="5dp"-->
            <!--android:paddingTop="5dp"-->
            <!--android:text="@string/add_tags"-->
            <!--android:textColor="@android:color/darker_gray"/>-->
