            <!--android:id="@+id/tag_group"-->
            <!--android:layout_below="@+id/tv_prompt"-->
            <!--atg_inputHint="@string/post_hashtag"-->
            <!--app:atg_isAppendMode="true"-->
            <!--style="@style/TagGroup"/>-->
    </RelativeLayout>
</ScrollView>
</LinearLayout>